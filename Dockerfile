FROM python:3.11-slim

WORKDIR /app

# Install build essentials for potential dependencies
RUN apt-get update && apt-get install -y build-essential && rm -rf /var/lib/apt/lists/*

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY . .

# Environment variable placeholder (should be passed at runtime)
ENV PYTHONPATH=/app

EXPOSE 8000
EXPOSE 8501

CMD ["bash", "-c", "uvicorn src.api.main:app --host 0.0.0.0 --port 8000 & streamlit run app/streamlit_app.py --server.port 8501 --server.address 0.0.0.0"]

